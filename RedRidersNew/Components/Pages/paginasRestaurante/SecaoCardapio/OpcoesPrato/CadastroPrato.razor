@page "/restaurante/cadastro-prato"
@using RedRidersNew.Components.Layout.LayoutRestaurante
@layout MainLayoutRestaurante
@rendermode InteractiveServer
@using RedRidersNew.Models
@inject PratosDAO pratosDAO;
@inject NavigationManager Navigation

<PageTitle>Cadastrar Prato</PageTitle>

<div class="container py-4">
    <NavBarCardapio />

    <EditForm Model="@pratos" OnValidSubmit="Salvar" class="card p-4 mb-4 shadow-sm">

        <DataAnnotationsValidator />
        <ValidationSummary />

        <h4 class="mb-3 fw-semibold border-bottom pb-2">Cadastro de Prato</h4>

        <div class="row g-3">

            <!-- Nome -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Nome do prato</label>
                <InputText class="form-control" @bind-Value="pratos.nome" />
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Preço</label>
                <InputNumber class="form-control" @bind-Value="pratos.preco" />
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Descrição</label>
                <InputText class="form-control" @bind-Value="pratos.descricao" />
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Nº Cardapio</label>
                <InputNumber class="form-control" @bind-Value="pratos.idCcarFk" />
            </div>

        </div>

        <div class="mt-4 text-end">
            <button  type="submit" class="btn btn-soft-primary px-4">Cadastrar</button>
        </div>

    </EditForm>

</div>

@code {

    private string? erro = null;

    [SupplyParameterFromForm]
    private Pratos? pratos { get; set; } = new();

    private void Salvar()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(pratos!.nome))
                throw new Exception("O campo nome é obrigatório");

            pratosDAO.Inserir(pratos);
            Navigation.NavigateTo("/restaurante/gerenciar-restaurantes");
        }
        catch (Exception ex)
        {
            erro = ex.Message;
        }
    }
}
