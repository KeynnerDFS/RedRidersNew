@page "/entregador/gerenciar-veiculos"
@using RedRidersNew.Components.Layout.LayoutEntregador
@inject NavigationManager Nav
@layout MainLayoutEntregador
@using RedRidersNew.Models
@inject VeiculoDAO veiculoDAO;
@inject NavigationManager Navigation

<PageTitle>Gerenciar Veículos</PageTitle>

<div class="container py-4">

    <NavBarVeiculos />

    <section class="mb-4">
        <div class="search-box d-flex gap-2">
            <input type="text" class="form-control" placeholder="Pesquisar veículos..."  />
            <button class="btn btn-search btn-secondary" >Buscar</button>

            <NavLink href="/entregador/cadastro-veiculo"
                     class="btn btn-primary px-4 py-2 d-flex align-items-center gap-2">
                <i class="bi bi-plus-circle"></i>
            </NavLink>
        </div>
    </section>

    <div class="row g-4">
        @foreach (var veiculo in listaVeiculo)
        {
            <div class="col-12 col-sm-12 col-md-6 col-lg-4">
                <div class="card shadow-sm border-0 h-100">
                    <img class="card-img-top" src="@veiculo.rotaimg" alt="@veiculo.nome" />
                    <div class="card-body text-center">
                        <h5 class="fw-bold">@veiculo.nome</h5>
                        <p class="text-muted">@veiculo.modelo</p>

                        <div class="btn-group w-100 mt-2">
                            <NavLink href="@($"/entregador/editar-veiculo/{veiculo.Id}")"
                                     class="btn btn-soft-primary d-flex align-items-center justify-content-center gap-1">
                                <i class="bi bi-pencil-square"></i>
                            </NavLink>

                            <NavLink href="@($"/entregador/detalhes-veiculo/{veiculo.Id}")"
                                     class="btn btn-soft-neutral d-flex align-items-center justify-content-center gap-1">
                                <i class="bi bi-eye"></i>
                            </NavLink>

                            <EditForm Model="@veiculo" OnSubmit="() => Excluir(veiculo.Id)" formname="@($"formExcluir_{veiculo.Id}")">
                                <button type="submit" class="btn btn-soft-danger d-flex align-items-center justify-content-center gap-1">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </EditForm>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private List<Veiculo> listaVeiculo = new();

    private string erro = string.Empty;

    [Parameter]
    public int Id { get; set; }

    [SupplyParameterFromForm]
    private Veiculo veiculo { get; set; } = new();

    protected override void OnInitialized()
    {
        CarregarProdutos();
    }

    private void CarregarProdutos()
    {
        listaVeiculo = veiculoDAO.ListarTodos();
    }

    private void Excluir(int id)
    {
        try
        {
            veiculoDAO.Excluir(id);
            Navigation.NavigateTo("/restaurante/gerenciar-restaurantes", true);
        }
        catch (Exception ex)
        {
            erro = $"Erro ao excluir o restaurante: {ex.Message}";
        }
    }
}
