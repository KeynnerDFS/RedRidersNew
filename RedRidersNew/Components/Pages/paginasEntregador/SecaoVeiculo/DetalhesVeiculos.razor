@page "/entregador/detalhes-veiculo/{Id:int}"
@using RedRidersNew.Components.Layout.LayoutEntregador
@layout MainLayoutEntregador
@rendermode InteractiveServer
@using RedRidersNew.Models
@inject VeiculoDAO veiculoDAO;
@inject NavigationManager Navigation




<PageTitle>Detalhes do Veículo - @veiculo.Id </PageTitle>

<div class="container py-4">

    <NavBarVeiculos />

    <div class="card shadow-sm p-4">
        <h4 class="mb-3">@veiculo.nome</h4>
        <p class="text-muted">@veiculo.modelo</p>
        <img src="@veiculo.rotaimg" alt="@veiculo.nome" class="img-fluid rounded mb-3" />

        <!-- Aqui você pode colocar mais detalhes do veículo, como placa, ano, cor, etc. -->
    </div>
</div>

@code {

    private string erro = string.Empty;

    [Parameter]
    public int Id { get; set; }

    [SupplyParameterFromForm]
    private Veiculo veiculo { get; set; } = new();

    protected override void OnInitialized()
    {
        var c = veiculoDAO.BuscarPorId(Id);

        if (c != null)
        {
            veiculo = c;
        }
        else
        {
            erro = "Produto não encontrado.";
        }
    }
}
