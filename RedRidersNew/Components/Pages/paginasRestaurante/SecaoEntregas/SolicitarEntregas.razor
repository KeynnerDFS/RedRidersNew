@page "/restaurante/solicitar-entregas"
@using RedRidersNew.Components.Layout.LayoutRestaurante
@layout MainLayoutRestaurante
@rendermode InteractiveServer

<div class="container py-4">

    <!-- Formulário -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="mb-3">Cadastrar item para entrega</h5>

            <form class="row g-3">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="Nome do prato" />
                </div>

                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="Descrição" />
                </div>

                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="Valor do frete" />
                </div>

                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="Local de entrega" />
                </div>

                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="Local de retirada" />
                </div>

                <div class="col-md-4">
                    <input type="number" class="form-control" placeholder="Quantidade" />
                </div>

                <div class="col-12 text-end">
                    <button class="btn btn-primary px-4">Adicionar alimento</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Lista de produtos disponíveis -->
    <h5 class="mb-3">Produtos disponíveis</h5>
    <section class="row g-4">

        <div class="col-6 col-sm-6 col-md-5 col-lg-3">
            <div class="card shadow-sm border-0 h-100">
                <img class="card-img-top img-square"
                     src="https://i.pinimg.com/736x/3b/a2/48/3ba2487cd4b1317424142a8b799295ce.jpg" />

                <div class="card-body text-center">
                    <p class="fw-semibold mb-2">Nome do prato</p>
                    <button class="btn btn-outline-primary btn-sm w-100">Adicionar</button>
                </div>
            </div>
        </div>

        <div class="col-6 col-sm-6 col-md-5 col-lg-3">
            <div class="card shadow-sm border-0 h-100">
                <img class="card-img-top img-square"
                     src="https://i.pinimg.com/736x/5b/35/3d/5b353d2c9fae2ba7940bba4108cccabc.jpg" />

                <div class="card-body text-center">
                    <p class="fw-semibold mb-2">Nome do prato</p>
                    <button class="btn btn-outline-primary btn-sm w-100">Adicionar</button>
                </div>
            </div>
        </div>

    </section>

    <!-- Produtos adicionados -->
    <h5 class="mt-5 mb-3">Itens adicionados à entrega</h5>
    <section class="row g-4">

        @foreach (var item in Enumerable.Range(1, 3))
        {
            <div class="col-6 col-sm-6 col-md-5 col-lg-3">
                <div class="card shadow-sm border-0 h-100">
                    <img class="card-img-top img-square"
                         src="https://i.pinimg.com/736x/97/33/c0/9733c0a81e46e63b338a0ad8d7d1f768.jpg" />

                    <div class="card-body text-center">
                        <p class="fw-semibold mb-2">Nome do prato</p>
                        <button class="btn btn-outline-danger btn-sm w-100">Remover</button>
                    </div>
                </div>
            </div>
        }
    </section>

    <div class="text-end mt-4">
        <button class="btn btn-success px-4 py-2">Finalizar pedido</button>
    </div>

</div>

@code {
    void OnSubmit()
    {
        // seu backend...
    }
}
